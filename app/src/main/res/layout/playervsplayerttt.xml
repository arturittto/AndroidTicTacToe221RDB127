<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Name of the first player -->
    <TextView
        android:id="@+id/textViewPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Name of the second player -->
    <TextView
        android:id="@+id/textViewPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:textSize="18sp"
        android:layout_below="@id/textViewPlayer1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Game board -->
    <GridLayout
        android:id="@+id/gridLayoutBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPlayer2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal">

        <!-- Buttons for tic-tac-toe game -->
        <Button
            android:id="@+id/button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="24sp"
            android:onClick="onButtonClick"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="24sp"
            android:onClick="onButtonClick"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="24sp"
            android:onClick="onButtonClick"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="24sp"
            android:onClick="onButtonClick"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="24sp"
            android:onClick="onButtonClick"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="24sp"
            android:onClick="onButtonClick"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="24sp"
            android:onClick="onButtonClick"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="24sp"
            android:onClick="onButtonClick"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=""
            android:textSize="24sp"
            android:onClick="onButtonClick"/>

    </GridLayout>

    <!-- Restart Game button -->
    <Button
        android:id="@+id/buttonRestartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart Game"
        android:layout_below="@id/gridLayoutBoard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="restartGame"/>

</RelativeLayout>
